{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": [
        "*",
        "src/*"
      ]
    },
    "checkJs": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "docs/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}